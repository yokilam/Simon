<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="nyc.c4q.simon_says.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="380dp"
        android:layout_height="510dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/roundnumber"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageyellow"
            android:layout_alignEnd="@+id/imagegreen"
            android:layout_marginEnd="23dp"
            android:fontFamily="sans-serif"
            android:text="Round:1"
            android:textSize="10pt" />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="play" />

        <ImageView
            android:id="@+id/imagered"
            android:layout_width="210dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="106dp"
            android:src="@drawable/red" />

        <ImageView
            android:id="@+id/imageblue"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/imagegreen"
            android:layout_marginStart="27dp"
            android:src="@drawable/blue" />

        <ImageView
            android:id="@+id/imageyellow"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imagered"
            android:layout_marginEnd="20dp"
            android:src="@drawable/yellow" />

        <ImageView
            android:id="@+id/imagegreen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/button"
            android:layout_alignStart="@+id/imagered"
            android:src="@drawable/green" />


    </RelativeLayout>


</RelativeLayout>
